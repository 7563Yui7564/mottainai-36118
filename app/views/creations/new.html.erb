<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">DIYの作品</h2>
      <%= form_with model: @creation, local: true do |f| %> 
          <div class="field">
            <%= f.label :title, "タイトル" %><br />
            <%= f.text_field :title, id:"creation_title" %>
          </div>

          <div class="field">
            <%= f.label :category_id, "カテゴリー" %><br />
            <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: :form__text, id:"creation_category_id"}) %>
          </div>

           <div class="field">
            <%= f.label :image, "画像" %><br />
            <%= f.file_field :image, id:"creation_image" %>
          </div>

          <div class="field">
            <%= f.label :cost, "費用" %><br />
            <%= f.text_field :cost, class: :form__text, id:"creation_cost" %>
          </div>

           <div class="field">
            <%= f.label :material, "材料" %><br />
            <%= f.text_field :material, class: :form__text, id:"creation_material" %>
          </div>

          <div class="field">
            <%= f.label :tool, "道具" %><br />
            <%= f.text_field :tool, class: :form__text, id:"creation_tool" %>
          </div>

          <div class="field">
            <%= f.label :description, "説明" %><br />
            <%= f.text_area :description, class: :form__text, id:"creation_description" %>
          </div>

          <div class="field">
            <%= f.label :trigger, "初めたきっかけ" %><br />
            <%= f.text_area :trigger, class: :form__text, id:"creation_trigger" %>
          </div>

          <div class="actions">
            <%= f.submit "保存する", class: :form__btn  %>
          </div>
      <% end %> 
    </div>  
  </div>
</div>
